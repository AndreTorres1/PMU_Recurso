<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.adicionarTracker">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="406dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="@string/adiciona_tracker"
        android:textColor="@color/white"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="36dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="374dp"
        android:layout_height="29dp"
        android:gravity="center"
        android:text="Identificador"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/inputId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.874" />

    <EditText
        android:id="@+id/inputId"
        android:layout_width="378dp"
        android:layout_height="44dp"
        android:layout_marginBottom="408dp"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:textColor="@color/white"
        android:hint="Introduza o identificador"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="17dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="374dp"
        android:layout_height="29dp"
        android:gravity="center"
        android:text="Barco"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/barco"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928"
        tools:layout_editor_absoluteX="21dp"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/barco"
        android:layout_width="378dp"
        android:layout_height="44dp"
        android:layout_marginBottom="288dp"
        android:gravity="center"
        android:hint="Ex: S21"
        android:textAlignment="center"
        android:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="17dp"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btnInformacoesAvancadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Informações Avançadas"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnVoltar"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barco"
        app:layout_constraintVertical_bias="0.514"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/white"
        android:text="Ligar Dispositivo"
        android:textColor="@color/black"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barco"
        app:layout_constraintBottom_toTopOf="@+id/btnAdicionarTracker"
        app:layout_constraintVertical_bias="0.502"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"/>

    <Button
        android:id="@+id/btnAdicionarTracker"
        android:layout_width="201dp"
        android:layout_height="46dp"
        android:backgroundTint="@color/white"
        android:text="Adicionar"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnVoltar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.867"
       />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="201dp"
        android:layout_height="46dp"
        android:backgroundTint="@color/white"
        android:text="Voltar"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.867"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>